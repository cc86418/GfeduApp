<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 边缘线的宽度和颜色 -->
    <stroke
        android:width="1px"
        android:color="#dd5555" />
    <!-- 中间渐变，角度0从左往右，正值为逆时针，270度为从上到下 -->
    <gradient
        android:angle="270"
        android:centerColor="#dd5555"
        android:endColor="#dd5555"
        android:startColor="#dd5555" />
    <!-- 设置四个角的角度 -->
    <corners
        android:bottomLeftRadius="6px"
        android:bottomRightRadius="6px"
        android:topLeftRadius="6px"
        android:topRightRadius="6px" />

</shape>