<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line_view">


        <LinearLayout
            android:id="@+id/top_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/no_header_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:visibility="visible">

                    <WebView
                        android:id="@+id/course_details_top_wb"
                        android:layout_width="match_parent"
                        android:layout_height="225dp" />

                    <TextView
                        android:id="@+id/course_details_top_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="视频加载中...请稍后"
                        android:textColor="#666666"
                        android:textSize="13dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/course_details_top_im"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/top_back_RelativeLayout"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="top|left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp">

                        <ImageView
                            android:id="@+id/top_back"
                            android:layout_width="10dp"
                            android:layout_height="17dp"
                            android:background="@drawable/course_btn_back"></ImageView>
                    </RelativeLayout>


                </FrameLayout>


                <TextView
                    android:id="@+id/course_details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:text="121111111111111111111111111111111111111111111111111111111111111111111"
                    android:textColor="#333333"
                    android:textSize="17dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/course_details_intoName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="9dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/red"
                        android:text="111"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/course_details_intoName2"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/course_details_intoName"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="9dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="3fffff"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/course_details_intoName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="9dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text=""
                        android:textSize="18dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="#f5f5f5" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课程详情"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textColor="#666666"
                        android:textSize="13dp"/>

                </RelativeLayout>


                <WebView
                    android:id="@+id/CourseDetailsWb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"></WebView>


            </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/bottom_layout"
        android:background="#dddddd">

    </View>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_weight="5"
            android:background="#ffffff"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/good_cshare_llyt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/taocan_fenxiang_n" />

                <TextView
                    android:id="@+id/not_share_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="分享"
                    android:textColor="@drawable/software_textcolor2"
                    android:textSize="@dimen/px_22" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/px_1"
                android:layout_height="match_parent"
                android:background="#ffffff"></TextView>

            <LinearLayout
                android:id="@+id/good_collection_llyt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/collect_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/taocan_shoucang_n" />

                <TextView
                    android:id="@+id/collect_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="收藏"
                    android:textColor="@drawable/software_textcolor2"
                    android:textSize="@dimen/px_22" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/px_1"
                android:layout_height="match_parent"
                android:background="#ffffff"></TextView>

            <LinearLayout
                android:id="@+id/server_linear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/server_im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/taocan_kefu_n" />

                <TextView
                    android:id="@+id/server_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="客服"
                    android:textColor="@drawable/software_textcolor2"
                    android:textSize="@dimen/px_22" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_shop_car_llyt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF6F06"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="#FFF"
                android:textSize="@dimen/px_32" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/go_buy_Click"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <RelativeLayout
                android:id="@+id/go_buy_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#dd5555"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/tel_im"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6.5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/icon_gouwuche" />

                <TextView
                    android:id="@+id/buy_immediately_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tel_im"
                    android:text="立即购买"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/px_26" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>