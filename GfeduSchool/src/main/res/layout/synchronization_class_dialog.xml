<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/synchronization_background">

        <RelativeLayout
            android:id="@+id/edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tb_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="你有100条数据需要同步"
                android:textColor="#575757" />

            <Button
                android:id="@+id/synchronization_btn"
                android:layout_width="158dp"
                android:layout_height="48dp"
                android:layout_below="@+id/tb_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_lijitongbu"
                android:text="立即同步"
                android:textColor="@color/white" />


        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/qx_relative"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/synchronization_background">

        <TextView
            android:id="@+id/qx_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textColor="#575757"
             />


    </RelativeLayout>


</LinearLayout>