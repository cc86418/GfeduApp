<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mybg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/tob_bg_qq">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <ImageButton
            android:id="@+id/my_setting"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/my_setting_icon" />

        <ImageButton
            android:id="@+id/my_message"
            android:layout_width="21dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/my_setting"
            android:background="@drawable/my_imessage"
            android:visibility="visible" />

    </RelativeLayout>


    <cn.jun.courseinfo.ui.MyScrollView
        android:id="@+id/Scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/my_setting_titilebg"
                android:visibility="visible">


                <RelativeLayout
                    android:id="@+id/nameTle_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/gexm"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                </RelativeLayout>


                <ImageView
                    android:id="@+id/name_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="30dp" />


                <RelativeLayout
                    android:id="@+id/sj_Relative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/sj_icon"
                    android:layout_toRightOf="@+id/nameTle_layout">


                </RelativeLayout>


                <ImageButton
                    android:id="@+id/sj_icon"
                    android:layout_width="6dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/jiantou_whrite" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/sixin_click"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/my_sx_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/dingdan_icon" />

                    <TextView
                        android:id="@+id/my_sx_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/my_sx_icon"
                        android:text="我的私信"
                        android:textColor="@color/my_tvcolor"
                        android:textSize="14sp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/dingdan_click"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible">

                    <ImageButton
                        android:id="@+id/my_dd_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/dingdan_icon" />

                    <TextView
                        android:id="@+id/my_dd_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/my_dd_icon"
                        android:text="我的订单"
                        android:textColor="@color/my_tvcolor"
                        android:textSize="14sp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line"
                    android:visibility="visible" />


                <RelativeLayout
                    android:id="@+id/gouwuche_click"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible">

                    <ImageButton
                        android:id="@+id/my_gwc_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/gouwuche_icon" />

                    <TextView
                        android:id="@+id/my_gwc_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/my_gwc_icon"
                        android:text="我的购物车"
                        android:textColor="@color/my_tvcolor"
                        android:textSize="14sp" />


                </RelativeLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line"
                    android:visibility="gone" />


                <RelativeLayout
                    android:id="@+id/kaquanclick"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/my_kq_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/kaquan_icon" />

                    <TextView
                        android:id="@+id/my_kq_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/my_kq_icon"
                        android:text="我的卡券"
                        android:textColor="@color/my_tvcolor"
                        android:textSize="14sp" />

                </RelativeLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line2"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/mybg"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="11dp"
                    android:background="@color/mybg"
                    android:visibility="gone" />


                <RelativeLayout
                    android:id="@+id/shizipingyi_click"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible">

                    <ImageButton
                        android:id="@+id/shizi__icon"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="11dp"
                        android:background="@drawable/icon_shizipingyi" />

                    <TextView
                        android:id="@+id/shizi_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/shizi__icon"
                        android:text="我的师资评议"
                        android:textColor="@color/my_tvcolor"
                        android:textSize="14sp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/zhibo_click"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp">

                    <ImageButton
                        android:id="@+id/my_zb_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/zhibo_icon" />

                    <TextView
                        android:id="@+id/my_zb_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:layout_toRightOf="@+id/my_zb_icon"
                        android:text="我的直播"
                        android:textColor="@color/my_tvcolor"
                        android:textSize="14sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/tiku_click"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/my_tk_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/tiku_icon" />

                    <TextView
                        android:id="@+id/my_tiku_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/my_tk_icon"
                        android:text="我的题库"
                        android:textColor="@color/my_tvcolor"
                        android:textSize="14sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/huancun_click"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp">

                    <ImageButton
                        android:id="@+id/my_hc_icon"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="9dp"
                        android:background="@drawable/huancun_icon" />

                    <TextView
                        android:id="@+id/my_hc_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/my_hc_icon"
                        android:text="我的缓存"
                        android:textColor="@color/my_tvcolor"
                        android:textSize="14sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/shoucang_click"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible">

                    <ImageButton
                        android:id="@+id/shoucang_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/icon_shoucang" />

                    <TextView
                        android:id="@+id/shoucang_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/shoucang_icon"
                        android:text="我的收藏"
                        android:textColor="@color/my_tvcolor"
                        android:textSize="14sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line"
                    android:visibility="visible" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/mybg"
                    android:visibility="gone" />


                <RelativeLayout
                    android:id="@+id/synchronization_click"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/my_synchronization_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/synchronization_class_icon" />

                    <TextView
                        android:id="@+id/my_synchronization_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:layout_toRightOf="@+id/my_synchronization_icon"
                        android:text="课程同步"
                        android:textColor="@color/my_tvcolor"
                        android:textSize="14sp" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line"
                    android:visibility="gone" />


                <RelativeLayout
                    android:id="@+id/yijieshu_click"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp">

                    <ImageButton
                        android:id="@+id/my_yjskc_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/jieshukecheng_icon" />

                    <TextView
                        android:id="@+id/my_yjskc_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/my_yjskc_icon"
                        android:text="已结束课程"
                        android:textColor="@color/my_tvcolor"
                        android:textSize="14sp" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line" />


                <RelativeLayout
                    android:id="@+id/jianyifankui_click"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp">

                    <ImageButton
                        android:id="@+id/my_jyfk_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/jianyifankui_icon" />

                    <TextView
                        android:id="@+id/my_jykf_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/my_jyfk_icon"
                        android:text="建议反馈"
                        android:textColor="@color/my_tvcolor"
                        android:textSize="14sp" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/help_click"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp">

                    <ImageButton
                        android:id="@+id/my_bzzx_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bangzhuzhongxin_icon" />

                    <TextView
                        android:id="@+id/my_bzzx_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/my_bzzx_icon"
                        android:text="帮助中心"
                        android:textColor="@color/my_tvcolor"
                        android:textSize="14sp" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line" />


                <RelativeLayout
                    android:id="@+id/about_click"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp">

                    <ImageButton
                        android:id="@+id/my_gywm_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/about_icon" />

                    <TextView
                        android:id="@+id/my_gywm_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/my_gywm_icon"
                        android:text="关于我们"
                        android:textColor="@color/my_tvcolor"
                        android:textSize="14sp" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line" />


            </LinearLayout>

        </LinearLayout>
    </cn.jun.courseinfo.ui.MyScrollView>


</LinearLayout>