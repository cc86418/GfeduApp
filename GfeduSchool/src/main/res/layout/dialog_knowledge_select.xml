<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subDialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_dialog_bg"
    android:orientation="vertical"
    android:padding="0dp">


    <RelativeLayout
        android:id="@+id/dialog_header_layout"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_gravity="center_horizontal"
        android:background="#dddddd">

        <Button
            android:id="@+id/sel_knowledge_btn"
            android:layout_width="106px"
            android:layout_height="45px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:background="@drawable/login_button_bg"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="22px" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="420px"
        android:layout_below="@+id/dialog_header_layout">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>