<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35px"
        android:layout_marginRight="35px"
        android:layout_marginTop="24px"
        android:background="@drawable/bg_course_search">

        <RelativeLayout
            android:id="@+id/item_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px">

            <RelativeLayout
                android:id="@+id/ll_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px">

                <RelativeLayout
                    android:id="@+id/classImg_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/courseImg"
                        android:layout_width="223px"
                        android:layout_height="155px"
                        android:layout_centerVertical="true"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/item_studyhome_img" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/classContent_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22px"
                    android:layout_toRightOf="@+id/classImg_layout">

                    <RelativeLayout
                        android:id="@+id/classCourse_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/courseName_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:ellipsize="end"
                            android:lineSpacingMultiplier="1.5"
                            android:maxLines="2"
                            android:textColor="#333333"
                            android:textSize="26px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/classSale_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/classCourse_layout"
                        android:layout_marginTop="34px">

                        <TextView
                            android:id="@+id/courseSale_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#666666"
                            android:lines="1"
                            android:ellipsize="end"
                            android:textSize="24px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/classPrice_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/classSale_layout"
                        android:layout_marginTop="24px">

                        <TextView
                            android:id="@+id/price_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="￥0"
                            android:textColor="#ff0000"
                            android:textSize="30px"
                            android:visibility="gone" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_below="@+id/item_Layout"
            android:layout_marginTop="20px">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentTop="true"
                android:background="@drawable/break_line" />

            <TextView
                android:id="@+id/studyCount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:textColor="#666666"
                android:textSize="24px" />

            <TextView
                android:id="@+id/coursePrice_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:text="￥0"
                android:textColor="#ff0000"
                android:textSize="30px" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:background="#dddddd" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>