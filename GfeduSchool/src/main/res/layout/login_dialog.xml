<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/xBtn"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right|top"
        android:background="@drawable/btn_cancer"
        android:visibility="gone"/>


    <ImageView
        android:id="@+id/dialog_titie"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/buy_chenggong" />


    <TextView
        android:id="@+id/edit_massage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:text="您还没登陆，请登陆"
        android:textColor="@color/my_tvcolor2"
        android:textSize="21sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/zj"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <Button
            android:id="@+id/qx_btn"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_toLeftOf="@+id/zj"
            android:background="@drawable/btn_whritebg"
            android:text="取消"
            android:textColor="@color/red" />

        <Button
            android:id="@+id/go_study"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_toRightOf="@+id/zj"
            android:background="@drawable/btn_redbg"
            android:text="去登录"
            android:textColor="@color/white" />

    </RelativeLayout>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="@null" />
</LinearLayout>