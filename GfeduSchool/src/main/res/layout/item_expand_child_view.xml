<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_child_layout"
    android:layout_width="match_parent"
    android:layout_height="90px"
    android:background="@color/tab_background_color">

    <TextView
        android:id="@+id/day_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="66px"
        android:textColor="#dd5555"
        android:textSize="24px" />

    <TextView
        android:id="@+id/item_child_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/day_txt"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:textColor="#333333"
        android:textSize="24px"
        android:maxEms="12"
        android:lines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/item_childTime_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30px"
        android:textColor="#999999"
        android:textSize="24px" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="66px"
        android:background="@drawable/line" />
</RelativeLayout>