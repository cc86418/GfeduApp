<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600px"
    android:layout_height="360px"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/test_dialog_bg"
    android:orientation="vertical"
    android:padding="0dp">

    <RelativeLayout
        android:id="@+id/tip_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37px">

        <ImageView
            android:layout_width="86px"
            android:layout_height="86px"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_tip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tipTxt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tip_layout"
        android:layout_marginTop="24px">

        <TextView
            android:id="@+id/tip_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="提示"
            android:textColor="#333333"
            android:textSize="34px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tipContent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipTxt_layout"
        android:layout_marginTop="26px">

        <TextView
            android:id="@+id/tipContent_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textColor="#666666"
            android:textSize="28px" />
        <TextView
            android:id="@+id/tipMoreContent_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:lineSpacingMultiplier="1.5"
            android:textColor="#666666"
            android:textSize="28px"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tipBtn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipContent_layout"
        android:layout_marginTop="28px">

        <ImageView
            android:id="@+id/midLine_img"
            android:layout_width="1px"
            android:layout_height="56px"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:visibility="invisible" />

        <Button
            android:id="@+id/cancelBtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140px"
            android:layout_height="56px"
            android:layout_centerVertical="true"
            android:layout_marginRight="24px"
            android:layout_toLeftOf="@+id/midLine_img"
            android:background="@drawable/cancel_dialog_bg"
            android:text="@string/cancel_txt"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/ensureBtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140px"
            android:layout_height="56px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:layout_toRightOf="@+id/midLine_img"
            android:background="@drawable/sure_dialog_bg"
            android:text="@string/ensure_txt"
            android:textColor="@color/white" />

    </RelativeLayout>
</RelativeLayout>