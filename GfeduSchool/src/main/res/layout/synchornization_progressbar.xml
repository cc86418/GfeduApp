<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/synchronization_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/xBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/icon_tongbushibao" />


        <ImageView
            android:id="@+id/im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_tangkuan_tongbushibai" />


        <TextView
            android:id="@+id/dc_dialog_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/im"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:text="同步失败"
            android:textColor="#333333"
            android:textSize="19sp" />

        <Button
            android:id="@+id/again_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dc_dialog_txt_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_tangkuan_tongbushibai"
            android:text="再试一次"
            android:paddingBottom="10dp"
            android:textColor="#ffffff"
            android:textSize="20sp" />


    </RelativeLayout>

</RelativeLayout>



