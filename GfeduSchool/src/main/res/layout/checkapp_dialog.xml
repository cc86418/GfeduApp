<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/xBtn"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="right|top"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_cancer"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/dialog_titie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="更新提示"
        android:textColor="@color/my_tvcolor"
        android:textSize="18sp" />


    <WebView
        android:id="@+id/wb"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp" />


    <RelativeLayout
        android:id="@+id/qz_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp">


        <Button
            android:id="@+id/qzUpBtn"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_redbg"
            android:text="去更新"
            android:textColor="@color/white" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/up_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/zj"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <Button
            android:id="@+id/xc_Btn"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_toLeftOf="@+id/zj"
            android:background="@drawable/btn_whritebg"
            android:text="下次再说"
            android:textColor="@color/red" />

        <Button
            android:id="@+id/goUpdateBtn"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_toRightOf="@+id/zj"
            android:background="@drawable/btn_redbg"
            android:text="去更新"
            android:textColor="@color/white" />

    </RelativeLayout>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="@null" />
</LinearLayout>