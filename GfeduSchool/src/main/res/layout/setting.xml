<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textColor="@color/my_tvcolor"
            android:textSize="16sp" />


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/mybg" />

    <RelativeLayout
        android:id="@+id/xinxi_click"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/xinxi_icon"
            android:layout_width="6dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/jiantou_grey" />

        <TextView
            android:id="@+id/xinxi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="个人信息"
            android:textColor="@color/my_tvcolor"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />


    <RelativeLayout
        android:id="@+id/dizhi_click"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/dizhi_icon"
            android:layout_width="6dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/jiantou_grey" />

        <TextView
            android:id="@+id/dizhi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="收货地址"
            android:textColor="@color/my_tvcolor"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/xingqu_click"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/xingqu_icon"
            android:layout_width="6dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/jiantou_grey" />

        <TextView
            android:id="@+id/xingqu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="我的兴趣"
            android:textColor="@color/my_tvcolor"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/line" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/mybg" />


    <RelativeLayout
        android:id="@+id/genghuanshouji_click"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/genghuanshouji_icon"
            android:layout_width="6dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/jiantou_grey" />

        <TextView
            android:id="@+id/genghuanshouji_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="更换手机"
            android:textColor="@color/my_tvcolor"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tel_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/genghuanshouji_tv"
            android:text=""
            android:textColor="@color/my_tvcolor2"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/line"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/mail_click"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/mail_icon"
            android:layout_width="6dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/jiantou_grey" />

        <TextView
            android:id="@+id/mail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="邮箱"
            android:textColor="@color/my_tvcolor"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/mail_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="58dp"
            android:layout_toRightOf="@+id/mail_tv"
            android:text=""
            android:textColor="@color/my_tvcolor2"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/mailbd_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/mail_icon"
            android:text=""
            android:textColor="@color/my_tvcolor2"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/line" />


    <RelativeLayout
        android:id="@+id/weixin_click"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/weixin_icon"
            android:layout_width="6dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/jiantou_grey" />

        <TextView
            android:id="@+id/weixin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="绑定微信"
            android:textColor="@color/my_tvcolor"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/weixinbd_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/weixin_icon"
            android:text=""
            android:textColor="@color/my_tvcolor2"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/line" />


    <RelativeLayout
        android:id="@+id/qq_click"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/qq_icon"
            android:layout_width="6dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/jiantou_grey" />

        <TextView
            android:id="@+id/qq_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="绑定QQ"
            android:textColor="@color/my_tvcolor"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/qqbd_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/qq_icon"
            android:text=""
            android:textColor="@color/my_tvcolor2"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/line" />


    <RelativeLayout
        android:id="@+id/weibo_click"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/weibo_icon"
            android:layout_width="6dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/jiantou_grey" />

        <TextView
            android:id="@+id/weibo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="绑定微博"
            android:textColor="@color/my_tvcolor"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/weibobd_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/weibo_icon"
            android:text=""
            android:textColor="@color/my_tvcolor2"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/line" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/mybg" />


    <RelativeLayout
        android:id="@+id/password_click"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/password_icon"
            android:layout_width="6dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/jiantou_grey" />

        <TextView
            android:id="@+id/password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="修改密码"
            android:textColor="@color/my_tvcolor"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/pass_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/password_icon"
            android:inputType="textPassword"
            android:maxLength="6"
            android:text="111111"
            android:textColor="@color/my_tvcolor2"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/line" />


    <Button
        android:id="@+id/quite_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/quit_btn"
        android:text="退出当前账号"
        android:textColor="@color/white"
        android:textSize="20sp" />


</LinearLayout>