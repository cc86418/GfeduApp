<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mybg"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/backLayout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp">


            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                 android:background="@drawable/backbtn" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="更换手机"
            android:textColor="@color/my_tvcolor"
            android:textSize="22sp" />


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/edit_layout_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_background_all">


        <ImageView
            android:id="@+id/change_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_phone" />


        <EditText
            android:id="@+id/tel_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/change_icon"
            android:background="@drawable/edit_bg_all"
            android:digits="0123456789"
            android:inputType="phone|number"
            android:hint="请输入新的手机号"
            android:singleLine="true"
            android:maxLength="11"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/red"
            android:text="1111"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/for_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="13sp"
            android:textColor="@color/red"
            android:layout_centerVertical="true"
            android:text=""
            android:visibility="gone"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">


        <RelativeLayout
            android:id="@+id/yzm_layout_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/yzm_btn"
            android:background="@drawable/edit_background_all">


            <ImageView
                android:id="@+id/yzm_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/icon_dynamic_code" />


            <EditText
                android:id="@+id/yzm_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/yzm_icon"
                android:background="@drawable/edit_bg_all"
                android:digits="0123456789"
                android:inputType="phone|number"
                android:hint="请输入动态码"
                android:singleLine="true"
                android:maxLength="4"
                android:textSize="16sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/yzm_btn"
            android:layout_width="120dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_input_entry"/>





    </RelativeLayout>




    <TextView
        android:id="@+id/tv_error2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/red"
        android:text=""
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/btn_input_entry"
        android:text="确认更换"
        android:textSize="16sp"
        android:textColor="@color/white"/>


</LinearLayout>