<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="51dp"
        android:layout_height="99dp">

        <ImageView
            android:id="@+id/line_duan"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/lina_duan" />

        <Button
            android:id="@+id/btn_riqi"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/line_duan"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_riqi"
            android:text="12"
            android:textColor="#dd5555"
            android:textSize="12dp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_riqi"
            android:layout_centerHorizontal="true"
            android:background="@drawable/line_chang" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="fill_parent"
        android:layout_height="99dp"
        android:layout_marginLeft="7.5dp"
        android:layout_marginRight="7.5dp"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="adadad287dy27xadsssssssssssssssssssssssssssssssssssasssssssassssssadadadad2b77b6x28736b2873xbv287xbv287xbv287x6v287xrbv287xrv28xr"
                android:textColor="#333333"
                android:textSize="13dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
             >

                <ImageView
                    android:id="@+id/icon_shijian"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_shijian"/>

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#666666"
                    android:layout_toRightOf="@+id/icon_shijian"
                    android:layout_centerVertical="true"
                    android:textSize="13dp"
                    android:text="12:00-19:00"/>
                
                <ImageView
                    android:id="@+id/zhibo_status"
                    android:layout_width="64dp"
                    android:layout_height="21dp"
                    android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"/>

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>