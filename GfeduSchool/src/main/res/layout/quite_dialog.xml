<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/xBtn"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right|top"
        android:background="@drawable/btn_cancer"/>


    <TextView
        android:id="@+id/dialog_titie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="确定退出当前账号?"
        android:textColor="@color/my_tvcolor"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/edit_massage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:text="温馨提示:如你想在其他手机设备上登陆此账号，请点击“退出并解绑”。"
        android:textColor="@color/my_tvcolor3"
        android:textSize="15sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/zj"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <Button
            android:id="@+id/okBtn"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_toLeftOf="@+id/zj"
            android:background="@drawable/btn_whritebg"
            android:text="退出并解绑"
            android:textColor="@color/red" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_toRightOf="@+id/zj"
            android:background="@drawable/btn_redbg"
            android:text="只退出"
            android:textColor="@color/white" />

    </RelativeLayout>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="@null" />
</LinearLayout>