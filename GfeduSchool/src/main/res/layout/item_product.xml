<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:id="@+id/linelyout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background_red"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="CFA特惠取证班"
                android:textColor="#666666"
                android:textSize="12dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/checkbox_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="top|right"
            android:background="@drawable/check_state"
            android:gravity="top" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="top|right"
            android:button="@null"
            android:checked="false"
            android:drawableRight="@drawable/check_state"
            android:gravity="top"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>