<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp">
    <RelativeLayout
        android:id="@+id/timeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dateTxtFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:textSize="24px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@+id/timeLayout"
        android:layout_marginTop="20px">
        <RelativeLayout
            android:id="@+id/answerFrom_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/userImg_From"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginTop="34px"
                android:layout_marginLeft="30px"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_toRightOf="@+id/answerFrom_layout">
            <RelativeLayout
                android:id="@+id/userNameFrom_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/userName_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#111"
                    android:textSize="28px" />
                <TextView
                    android:id="@+id/role_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="24px"
                    android:layout_toRightOf="@+id/userName_from"
                    android:layout_marginLeft="5px"
                    android:background="@drawable/role_txt_bg"
                    android:visibility="gone" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bubbleText_from_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userNameFrom_layout"
                android:layout_marginTop="20px">

                <com.github.library.bubbleview.BubbleTextView
                    android:id="@+id/bubbleFrom_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/ui_10_dip"
                    android:textColor="@color/banner_title_color"
                    app:angle="8dp"
                    app:arrowCenter="true"
                    app:arrowHeight="10dp"
                    app:arrowLocation="left"
                    app:arrowPosition="14dp"
                    app:arrowWidth="8dp"
                    app:bubbleColor="#ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bubbleImage_from_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bubbleText_from_layout"
                android:layout_marginTop="20px">

                <com.github.library.bubbleview.BubbleImageView
                    android:id="@+id/bubbleFrom_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:angle="8dp"
                    app:arrowCenter="true"
                    app:arrowHeight="10dp"
                    app:arrowLocation="left"
                    app:arrowPosition="14dp"
                    app:arrowWidth="8dp"
                    app:bubbleColor="#3B71C0"
                    android:scaleType="fitXY"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>