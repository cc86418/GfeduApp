<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/id_back"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="right"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_readTag"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#00ffff"
            android:text="delete" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="fill_parent"
        android:layout_height="52dp">

        <ImageView
            android:id="@+id/img_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/btn_bofang_icon"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="10.0dp"
            android:layout_toRightOf="@+id/img_title"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="#575757"
            android:textSize="13sp"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/tv_content_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_title"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="10.0dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_content_relative_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#575757"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_content_relative_tv_time"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_below="@+id/tv_content_relative_tv"
                android:text=""
                android:layout_marginTop="5dp"
                android:textColor="#8d8d8d"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/zhibo_icon_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_content_relative_tv"
                android:layout_toRightOf="@+id/tv_content_relative_tv_time"
                />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_content_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dp"
            android:layout_toRightOf="@+id/tv_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="#999999"
            android:textSize="9sp" />

        <RelativeLayout
            android:id="@+id/down_relative"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_play"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_play"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10.0dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="未下载"
                    android:textColor="#999999"
                    android:textSize="9sp" />
            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_xiazai"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginRight="18dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:textSize="9sp"
            android:background="@drawable/btn_xiazai_n_icon"/>
    </RelativeLayout>


</FrameLayout>