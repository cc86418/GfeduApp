<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    <CheckedTextView
        android:id="@+id/ctv_check"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:gravity="center"
        android:clickable="false"
        android:background="@drawable/selector_check"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>
    <ImageView
        android:id="@+id/iv_learn_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:src="@drawable/ic_learn_state_1"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
         android:maxLines="1"
        android:layout_toRightOf="@id/ctv_check"
        android:layout_toLeftOf="@id/iv_learn_state"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:textColor="#575757"
        android:text="1、职业伦理"/>
    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/ctv_check"
        android:layout_toLeftOf="@id/iv_learn_state"
        android:layout_marginLeft="15dp"
        android:textSize="10sp"
        android:textColor="#c8c8c8"
        android:text="课程描述在此"/>
</RelativeLayout>